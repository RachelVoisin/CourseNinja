<% include ../partials/header %>
<% include ../partials/admin-header %>


<div class="row" style="margin-left: 50px; margin-right: 50px">


<form action="/admin/school/edit/<%= items[0].schoolId%>" method="post" class="col s12">
<input type="hidden" name="schoolId" value="<%=items[0].schoolId%>">
<div class="form-group row">
    <label for="schoolName" class="col-2 col-form-label">School Name</label>
    <div class="col-10">
        <input type="text" name="schoolName" value="<%=items[0].schoolName%>" class="form-control" maxlength = "255">
    </div>
</div>

<div class="form-group row">
        <label for="schoolCity" class="col-2 col-form-label">School City</label>
        <div class="col-10">
            <input type="text" name="schoolCity" value="<%=items[0].schoolCity%>" class="form-control" maxlength = "255">
        </div>
</div>
<div class="form-group row">
    <label for="schoolRegion" class="col-2 col-form-label">School Region</label>
    <div class="col-10">
        <input type="text" name="schoolRegion" value="<%=items[0].schoolRegion%>" class="form-control" maxlength = "255">
    </div>
</div>
<div class="form-group row">
        <label for="schoolCountry" class="col-2 col-form-label">School Country</label>
        <div class="col-10">
            <input type="text" name="schoolCountry" value="<%=items[0].schoolCountry%>" class="form-control" maxlength = "255">
        </div>
</div>

<div class="form-group row">
        <label for="submit" class="col-2 col-form-label" style="color:#ffffff">Submit</label>
        <div class="col-10">
            <input type="submit" name="submit" value="Save School" class="btn btn-primary btn-lg">
        </div>
</div>

</form>


</div>
<% include ../partials/footer %>